# =============================================================================
# SwarmAI Environment Configuration
# =============================================================================
# Copy to .env and fill in all values before deployment
# Domain: agents.northpeak.app

NODE_ENV=production
PORT=3210
WS_PORT=3211

# URLs
BASE_URL=https://agents.northpeak.app
FRONTEND_URL=https://agents.northpeak.app
WS_URL=wss://agents.northpeak.app

# Database
SQLITE_PATH=/app/data
AGENTS_DB=agents.db

# Redis (REQUIRED)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password-here

# Qdrant (REQUIRED)
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=your-qdrant-api-key-here

# Authentication (REQUIRED - generate with: openssl rand -base64 64)
# Long session duration - users stay logged in for 90 days
JWT_SECRET=CHANGE_ME_TO_A_SECURE_64_CHAR_RANDOM_STRING
JWT_EXPIRES_IN=90d
JWT_REFRESH_EXPIRES_IN=365d

# AI Providers - Configured via Settings module in UI (saved to database)
# No environment variables needed for AI provider keys

# Email (AWS SES)
EMAIL_PROVIDER=ses
AWS_SES_FROM_EMAIL=noreply@northpeak.app
SMTP_HOST=email-smtp.ap-southeast-2.amazonaws.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-ses-smtp-username
SMTP_PASS=your-ses-smtp-password
EMAIL_FROM=noreply@northpeak.app

# Security
CORS_ORIGINS=https://agents.northpeak.app,http://localhost:3202
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Docker Network (for Nginx Proxy Manager integration)
PROXY_NETWORK=proxy
