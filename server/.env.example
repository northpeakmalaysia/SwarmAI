# SwarmAI Server Configuration
# Copy this file to .env and configure your values

# =============================================================================
# Server
# =============================================================================
API_PORT=3210
WS_PORT=3211
NODE_ENV=development

# =============================================================================
# Security
# =============================================================================
# IMPORTANT: Generate a secure random string for production
JWT_SECRET=your-jwt-secret-change-in-production

# 32-byte hex string for encrypting credentials
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3202,https://agents.northpeak.app

# =============================================================================
# Test Bypass (Development Only)
# =============================================================================
# Enable test bypass token for API access without JWT
ENABLE_TEST_BYPASS=true
TEST_BYPASS_TOKEN=swarm-test-bypass-2026

# =============================================================================
# Database
# =============================================================================
DATABASE_PATH=data/swarm.db

# =============================================================================
# WhatsApp
# =============================================================================
WHATSAPP_SESSION_PATH=data/whatsapp-sessions

# Chromium path (auto-detected if not set)
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# Set to false to show browser window (debugging)
PUPPETEER_HEADLESS=true

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# Redis (Optional - for caching)
# =============================================================================
# REDIS_URL=redis://localhost:6380
REDIS_HOST=localhost
REDIS_PORT=6380
# REDIS_PASSWORD=your-redis-password
